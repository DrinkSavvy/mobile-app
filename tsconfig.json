{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@api/*": ["./api/*"],
      "@components/*": ["./components/*"],
      "@screens/*": ["./screens/*"],
      "@hooks/*": ["./hooks/*"],
      "@assets/*": ["./assets/*"],
      "@utils/*": ["./utils/*"],
      "@context/*": ["./context/*"],
      "@navigation/*": ["./navigation/*"],
      "@types": ["./types.ts"]
    }
  }
}
